extends layout

block styles
    link(rel = 'stylesheet', href = '/css/visualization.css')
    link(rel="icon" type="image/png" href="resources/favicon_visualization.png")

block pre_scripts
    script(src="https://d3js.org/d3.v5.min.js")
    script(src='scripts/visualization/main.js')
    script(src='scripts/visualization/dataset.js')
    script(src='scripts/visualization/visualization.js')
    script(src='scripts/visualization/boxmanager.js')
    script(src='scripts/visualization/box.js')
    script(src='scripts/visualization/examplevisualization.js')
    script(src='scripts/visualization/properties.js')
    script(src='scripts/visualization/attentionmap.js')

block sidebars
    //-  Settings Sidebar -//
    div(class="ui sidebar right vertical menu settings")
        div(class="item")
            i(class="ui sliders fitted right icon")
            div(class="content")
                div(class="ui header") Settings:
        //-  Visualization type(s) -//
        div(class="item")
            div(class="ui styled accordion")
                        div(class="title")
                            i(class="ui dropdown icon")
                            i(class="ui sliders horizontal icon")
                            label Visualizations:
                        div(class="ui form content")
                            div(class="grouped fields left-align")
                                div(class="field")
                                    div(class="ui toggle checkbox")
                                        input(type="checkbox" name="eye_cloud")
                                        label Eye Cloud
                                div(class="field")
                                    div(class="ui toggle checkbox")
                                        input(type="checkbox" name="gaze_strips")
                                        label Gaze Strips
                                div(class="field")
                                    div(class="ui toggle checkbox")
                                        input(type="checkbox" name="transition_graph")
                                        label Transition Graph
                                div(class="field")
                                    div(class="ui toggle checkbox")
                                        input(type="checkbox" name="visual_attention_map")
                                        label Visual Attention Map
        //-  Visualization parameters -//
        div(class="item")
            div(class="ui styled accordion")
                        div(class="title")
                            i(class="ui dropdown icon")
                            i(class="ui sliders horizontal icon")
                        div(class="content")
                            p Settings are not implemented yet
        div(class="item")
            div(class="ui styled accordion")
                        div(class="title")
                            i(class="ui dropdown icon")
                            i(class="ui sliders horizontal icon")
                        div(class="content")
                            p Settings are not implemented yet
        div(class="item")
            div(class="ui styled accordion")
                        div(class="title")
                            i(class="ui dropdown icon")
                            i(class="ui sliders horizontal icon")
                        div(class="content")
                            p Settings are not implemented yet

block header_content
    //- Topbar Centered Text -//
    div(class="ui item")
        div(class="ui center aligned container")
            header(class="ui large header")
                span#topbar
    //-  Settings Sidebar Button -//
    div(class="ui item")
        div(class="ui right aligned container")
            i#settings_toggle(class="ui sliders icon circular" onclick="openSettings()")

block content
    div#container(class='container')
        div#frame(class='frame')
            div#innerframe(class='inner-frame')

block post_scripts
    script.
        function openSettings() {
            $('#settings_toggle')
                .removeClass('sliders')
                .addClass('times red inverted')
                .attr("onclick","closeSettings()");
            showSidebar('settings');
        };

    script.
        function closeSettings() {
            $('#settings_toggle')
                .removeClass('times red inverted')
                .addClass('sliders')
                .attr("onclick","openSettings()");
            hideSidebar('settings');
        };

    script.
        $('.ui.sidebar.settings')
            .sidebar({dimPage: false, closable: false})

    script.
        $('#visualization_nav').addClass('active');